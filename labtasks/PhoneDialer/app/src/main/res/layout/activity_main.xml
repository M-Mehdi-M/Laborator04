<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Top: Phone number and backspace horizontally -->
    <LinearLayout
        android:id="@+id/number_and_backspace_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/phone_number_edit_text"
            android:layout_width="220dp"
            android:layout_height="56dp"
            android:inputType="phone"
            android:enabled="false"
            android:gravity="center"
            android:textSize="28sp"
            android:layout_marginEnd="12dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/phone_number_field_desc" />

        <ImageButton
            android:id="@+id/backspace_image_button"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/backspace"
            android:contentDescription="@string/backspace_button_desc"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"/>
    </LinearLayout>

    <!-- Middle: Numeric keypad grid with all buttons -->
    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/number_and_backspace_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="36dp"
        app:rowCount="4"
        app:columnCount="3">

        <!-- First row: 1 2 3 -->
        <Button
            android:id="@+id/number_1_button"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:text="1"
            app:layout_column="0"
            app:layout_row="0" />
        <Button
            android:id="@+id/number_2_button"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:text="2"
            app:layout_column="1"
            app:layout_row="0" />
        <Button
            android:id="@+id/number_3_button"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:text="3"
            app:layout_column="2"
            app:layout_row="0" />

        <!-- Second row: 4 5 6 -->
        <Button
            android:id="@+id/number_4_button"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:text="4"
            app:layout_column="0"
            app:layout_row="1" />
        <Button
            android:id="@+id/number_5_button"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:text="5"
            app:layout_column="1"
            app:layout_row="1" />
        <Button
            android:id="@+id/number_6_button"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:text="6"
            app:layout_column="2"
            app:layout_row="1" />

        <!-- Third row: 7 8 9 -->
        <Button
            android:id="@+id/number_7_button"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:text="7"
            app:layout_column="0"
            app:layout_row="2" />
        <Button
            android:id="@+id/number_8_button"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:text="8"
            app:layout_column="1"
            app:layout_row="2" />
        <Button
            android:id="@+id/number_9_button"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:text="9"
            app:layout_column="2"
            app:layout_row="2" />

        <!-- Fourth row: * 0 # -->
        <Button
            android:id="@+id/star_button"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:text="*"
            app:layout_column="0"
            app:layout_row="3" />
        <Button
            android:id="@+id/number_0_button"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:text="0"
            app:layout_column="1"
            app:layout_row="3" />
        <Button
            android:id="@+id/pound_button"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:text="#"
            app:layout_column="2"
            app:layout_row="3" />
    </androidx.gridlayout.widget.GridLayout>

    <!-- Bottom: Call, Contacts, Hangup buttons in the same row -->
    <ImageButton
        android:id="@+id/call_image_button"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:scaleType="fitCenter"
        android:src="@drawable/call"
        android:background="@android:color/transparent"
        android:contentDescription="@string/call_button_desc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/contacts_image_button"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="32dp"/>

    <ImageButton
        android:id="@+id/contacts_image_button"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:scaleType="fitCenter"
        android:src="@drawable/contacts"
        android:background="@android:color/transparent"
        android:contentDescription="@string/contacts_button_desc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/call_image_button"
        app:layout_constraintEnd_toStartOf="@id/hangup_image_button"
        android:layout_marginBottom="32dp"/>

    <ImageButton
        android:id="@+id/hangup_image_button"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:scaleType="fitCenter"
        android:src="@drawable/hangup"
        android:background="@android:color/transparent"
        android:contentDescription="@string/hangup_button_desc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/contacts_image_button"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="32dp"/>

    <!-- TextView for Ox acceleration -->
    <TextView
        android:id="@+id/ox_value_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ox: 0.0"
        android:textSize="20sp"
        android:textColor="#333333"
        app:layout_constraintTop_toBottomOf="@id/number_and_backspace_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
